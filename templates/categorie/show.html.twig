{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <h1>{{ categorie.name }}</h1>




    <div class="mt-5">
        <table class="table table-primary">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Date de publication</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.titre }}</td>
                    <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_article_show', {'id': article.id}) }}">Consulter l'article</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun article(s) trouvé(s)</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
    <a href="{{ path('app_categorie_index') }}">Retourner à la liste des catégories</a>
{% endblock %}
