{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1>Catégories</h1>
    <table class="table table-borderless table-primary">
        <thead>
            <tr>
                <th>Nom de la catégorie</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.name }}</td>
                <td>
                    <a class="text-black" href="{{ path('app_categorie_show', {'id': categorie.id}) }}">Consulter la liste des articles</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Aucune catégorie(s trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
