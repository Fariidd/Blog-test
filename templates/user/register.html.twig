{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>S'inscrire</h1>
<div class="mb-3">
    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email,{'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.pseudo,{'attr': {'class': 'form-control'},'label':"Nom d'utilisateur"}) }}
        {{ form_row(registrationForm.plainPassword,{'attr': {'class': 'form-control'},'label': 'Mot de passe'}) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="mt-4 btn btn-primary">S'inscrire</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
